

<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Core Focus</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Users of Core Focus</h2>          
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Profile</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                
                <% for (let i =0; i < users.length; i++) { %>
                    <tr>
                        <td><%= users[i].userId %></td>
                        <td><a href="/user/<%= users[i].userId %>" ><%= users[i].name %></a></td>
                        <td><%= users[i].email %></td>
                        <td><%= users[i].contact %></td>
                        <td><img src = "<%= users[i].profile %>" width="15%"></td>
                        <td><a href="/updateUser/<%= users[i].userId %>">Edit</a></td>   
                        <td><a href="/deleteUser/<%= users[i].userId %>" onclick="return confirm('Are you sure you want to delete this user')">Delete</a></td>
                    </tr>
                <% } %>

            </tbody>
        </table>
    </div>
</body>
</html>