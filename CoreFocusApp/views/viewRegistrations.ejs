<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Core Focus</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>View Registrations</h2>          
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Registration ID</th>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Opportunity</th>
                    <th>Status</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                
                <% for (let i =0; i < registrations.length; i++) { %>
                    <tr>
                        <td><%= registrations[i].registrationId %></td>
                        <td><%= registrations[i].userId %></td>
                        <td><a href="/registration/<%= registrations[i].registrationId %>" ><%= registrations[i].name %></a></td>
                        <td><%= registrations[i].opportunity %></td>
                        <td><%= registrations[i].status %></td>
                        <td><a href="/updateRegistration/<%= registrations[i].registrationId %>">Edit</a></td>   
                        <td><a href="/updateRegistration/<%= registrations[i].registrationId %>" onclick="return confirm('Are you sure you want to delete this registration')">Delete</a></td>
                    </tr>
                <% } %>

            </tbody>
        </table>
    </div>
</body>
</html>